{
  "name": "@react-native-live-context/server",
  "version": "0.1.0",
  "description": "Local server for React Native Live Context SDK with WebSocket and MCP support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "react-native-live-context-server": "dist/cli.js"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"tsc --watch\" \"nodemon --watch dist dist/cli.js start --log-level debug\"",
    "dev:build": "tsc --watch",
    "dev:server": "nodemon --watch dist dist/cli.js start --log-level debug",
    "start": "node dist/cli.js start",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist"
  },
  "keywords": [
    "react-native",
    "ai",
    "live-context",
    "screenshot",
    "server",
    "websocket",
    "mcp"
  ],
  "author": "React Native Live Context Team (Generated by Kiro AI)",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "commander": "^11.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "qrcode-terminal": "^0.12.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.0",
    "@types/qrcode-terminal": "^0.12.0",
    "@types/ws": "^8.5.0",
    "concurrently": "^8.2.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/src/__tests__/setup.ts"],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,ts}",
      "<rootDir>/src/**/*.{test,spec}.{js,ts}"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/__tests__/**"
    ]
  }
}